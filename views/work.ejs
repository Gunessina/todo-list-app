<%- include("partials/header.ejs") %>

<div class="firstbox">
<div class="box" id="heading">
    <h1>
      Work List 
    </h1>
</div>
<div class="innerbox">
    <%for (var i = 0; i < workingItems.length; i++) { %>
            <div class="item">
                <input type="checkbox">
                <p id="texts">
                    <%= workingItems[i] %>
                </p>
            </div>
    <%} %>

    <form class="item" action="/work" method="post">
        <input type="text" name="workItem" placeholder="Add task to your work list..." autocomplete="off">
        <button type="submit" name="list" value="Work" list="">ToDo</button>
    </form>
</div>
</div>


<%- include("partials/footer.ejs") %>